{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "ReverseProxy": {
    "Routes": {
      "gameRoute": {
        "ClusterId": "GameCluster",
        "Match": {
          "Path": "/api/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "gameCluster": {
        "Destinations": {
          "gameService": {
            "Address": "http://game-service:5001/"
          }
        }
      }
    }
  }
}