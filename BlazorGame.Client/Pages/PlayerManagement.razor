@page "/PlayerManagement"
@inject HttpClient Http
@inject ITokenService TokenService

<h3>Gestion des joueurs</h3>

<h4>Ajouter un joueur</h4>
<input placeholder="Nom du joueur" @bind="newPlayerName" />
<button @onclick="AddPlayer">Ajouter</button>

@if (players == null)
{
    <p>Chargement…</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th><th>Nom</th><th>Actif</th><th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in players)
            {
                <tr>
                    <td>@p.Id</td>
                    <td>@p.Username</td>
                    <td>@p.IsActive</td>
                    <td>
                        <button @onclick="() => Toggle(p.Id)">Activer/Désactiver</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    List<PlayerDto>? players;
    string newPlayerName = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        var token = await TokenService.GetTokenAsync();
        Http.DefaultRequestHeaders.Authorization =
            new System.Net.Http.Headers.AuthenticationHeaderValue("Bearer", token);

        players = await Http.GetFromJsonAsync<List<PlayerDto>>("/api/admin/players");
    }

    async Task AddPlayer()
    {
        if (string.IsNullOrWhiteSpace(newPlayerName))
            return;

        var token = await TokenService.GetTokenAsync();
        Http.DefaultRequestHeaders.Authorization =
            new System.Net.Http.Headers.AuthenticationHeaderValue("Bearer", token);

        await Http.PostAsJsonAsync("/api/admin/players/add", new { username = newPlayerName });

        newPlayerName = string.Empty;
        await OnInitializedAsync(); // refresh
    }

    async Task Toggle(int id)
    {
        await Http.PostAsync($"/api/admin/players/{id}/toggle", null);
        await OnInitializedAsync();
    }

    public class PlayerDto
    {
        public int Id { get; set; }
        public string Username { get; set; }
        public bool IsActive { get; set; }
    }
}
