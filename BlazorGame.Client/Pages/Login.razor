@page "/"
@inject NavigationManager NavigationManager

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-sm">
                <div class="card-header bg-dark text-white text-center">
                    <h3 class="mb-0">Connexion</h3>
                </div>

                <div class="card-body">
                    <form>
                        
                        <div class="mb-3">
                            <label class="form-label" for="username">Nom d'utilisateur ou e-mail</label>
                            <input id="username"
                                   class="form-control @(showUsernameError ? "is-invalid" : "")"
                                   type="text"
                                   placeholder="Entrez votre identifiant"
                                   @bind="username" />
                            @if (showUsernameError)
                            {
                                <div class="text-danger mt-1">
                                    Le nom d'utilisateur est obligatoire.
                                </div>
                            }
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label" for="password">Mot de passe</label>
                            <input id="password"
                                   class="form-control @(showPasswordError ? "is-invalid" : "")"
                                   type="password"
                                   placeholder="Entrez votre mot de passe"
                                   @bind="password" />
                            @if (showPasswordError)
                            {
                                <div class="text-danger mt-1">
                                    Le mot de passe est obligatoire.
                                </div>
                            }
                        </div>
                        
                        <button type="button" class="btn btn-primary w-100" @onclick="OnLoginClick">
                            Se connecter
                        </button>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private string? username;
    private string? password;

    private bool showUsernameError;
    private bool showPasswordError;

    private void OnLoginClick()
    {
        showUsernameError = string.IsNullOrWhiteSpace(username);
        showPasswordError = string.IsNullOrWhiteSpace(password);
        
        if (showUsernameError || showPasswordError)
            return;
        
        if (username == "admin" && password == "admin")
        {
            NavigationManager.NavigateTo("/Admin");
        }
        else
        {
            NavigationManager.NavigateTo("/home");
        }
    }
}
